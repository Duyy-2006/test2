-- LocalScript (e.g. under StarterPlayerScripts)
local filename = game.Players.LocalPlayer.Name .. ".txt"
local Players = game:GetService("Players")
local player  = Players.LocalPlayer
local found = false
local pets = {
    "The Overlord",
}
local function checkpet(name)
    for _, petName in ipairs(pets) do
        if name == petName then
            return true
        end
    end
    return false
end
-- Wait for the full GUI hierarchy
local screenGui = player:WaitForChild("PlayerGui"):WaitForChild("ScreenGui")
local inventory = screenGui
    :WaitForChild("Inventory")
    :WaitForChild("Frame")
    :WaitForChild("Inner")
    :WaitForChild("Pets")
    :WaitForChild("Main")
    :WaitForChild("ScrollingFrame")

-- 1) Print all pet display names
local petsContainer = inventory:WaitForChild("Pets")
for _, petFrame in ipairs(petsContainer:GetChildren()) do
    if petFrame:IsA("Frame") then
        local displayNameLabel = petFrame
            :WaitForChild("Inner")
            :WaitForChild("Button")
            :WaitForChild("Inner")
            :WaitForChild("DisplayName")
        if checkpet(displayNameLabel.Text) then 
            found = true
        end
    end
end

-- 2) Print all team display names
local teamList = inventory
    :WaitForChild("Team")
    :WaitForChild("Main")
    :WaitForChild("List")

for _, teamItem in ipairs(teamList:GetChildren()) do
    if teamItem:IsA("Frame") then
        local displayNameLabel = teamItem
            :WaitForChild("Inner")
            :WaitForChild("Button")
            :WaitForChild("Inner")
            :WaitForChild("DisplayName")
        if checkpet(displayNameLabel.Text) then 
            found = true
        end
    end
end

local function GetGems()
    local txt = player.PlayerGui.ScreenGui.HUD.Left.Currency.Gems.Frame.Label.Text
    local digits = txt:gsub("%D", "")
    return tonumber(digits) or 0
end
if found and GetGems() > 100000000 then
    writefile(filename, "Yummytool")
    print("Done: conditions met and file written.")
else
    print("Not meet")
end
