local change = 1000
local Players = game:GetService("Players")
local player  = Players.LocalPlayer or Players.PlayerAdded:Wait()
local filename = player.Name .. ".txt"

-- Wait for the Backpack itself
local backpack = player:WaitForChild("Backpack")

-- Function to return the total number of seeds in the backpack
local function getTotalSeeds()
    local total = 0
    for _, tool in ipairs(backpack:GetChildren()) do
        if tool.Name:lower():find("seed") then
            -- extract the first number (e.g. “24” from “[X24]”), default to 1
            local count = tonumber(tool.Name:match("(%d+)")) or 1
            total = total + count
        end
    end
    return total
end

while true do
    print(getTotalSeeds())
    if getTotalSeeds() >= change then
        print("True")
        writefile(filename, "Yummytool")
        break
    else
        print("False")
        wait(15)
    end
end
 
